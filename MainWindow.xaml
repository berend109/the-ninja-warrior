<Window x:Class="project_arcade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_arcade"
        mc:Ignorable="d"
        Title="The Ninja Warrior" Height="900" Width="1600" WindowState="Maximized" WindowStyle="None">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="100"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Content="The Ninja Warrior" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" FontFamily="Arial Black"/>

		<Button Grid.Row="1" Height="100" Width="300" Margin="0, 0, 400, 200" Click="One_player_button" FontSize="48" FontWeight="Bold">1 Speler</Button>
		<Button Grid.Row="1" Height="100" Width="300" Margin="400, 0, 0, 200" Click="Two_player_button" FontSize="48" FontWeight="Bold">2 Spelers</Button>
		<Button Grid.Row="1" Height="100" Width="300" Margin="0, 200, 400, 0" Click="Highscores_button" FontSize="48" FontWeight="Bold">High Scores</Button>
		<Button Grid.Row="1" Height="100" Width="300" Margin="400, 200, 0, 0" Click="Quit_button" FontSize="48" FontWeight="Bold">Afsluiten</Button>
	</Grid>
</Window>
