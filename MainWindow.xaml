<Window x:Class="project_arcade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_arcade"
        mc:Ignorable="d"
        Title="The Ninja Warrior" Height="900" Width="1600" WindowState="Maximized" WindowStyle="None">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="100"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Content="The Ninja Warrior" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontFamily="Arial Black"/>

		<Button Grid.Row="1" Height="40" Width="100" Margin="0, 0, 250, 150" Click="One_player_button">1 Speler</Button>
		<Button Grid.Row="1" Height="40" Width="100" Margin="250, 0, 0, 150" Click="Two_player_button">2 Spelers</Button>
		<Button Grid.Row="1" Height="40" Width="100" Margin="0, 150, 250, 0" Click="Highscores_button">High Scores</Button>
		<Button Grid.Row="1" Height="40" Width="100" Margin="250, 150, 0, 0" Click="Quit_button">Afsluiten</Button>
	</Grid>
</Window>
